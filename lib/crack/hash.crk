import crack.lang Buffer;

@abstract
class Hash {
    uint _size;

    ## Size of the digest in bytes
    uint count(){
        return _size;
    }

    ## Add more data
    @abstract
    void update(Buffer buf);

    ## Return raw digest
    @abstract
    Buffer digest();

}
