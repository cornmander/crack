lib_LTLIBRARIES = libcrack.la
libcrack_la_SOURCES = %libCrackSources%
libcrack_la_LDFLAGS = -version-info 1:0:0 @LLVM_LDFLAGS@ @LLVM_LIBS@
pkglib_LTLIBRARIES = test/testext.la runtime.la
test_testext_la_LDFLAGS = -avoid-version -module
test_testext_la_SOURCES = test/testext.cc
runtime_la_LDFLAGS = -avoid-version -module
runtime_la_SOURCES = %libRuntimeSources%

